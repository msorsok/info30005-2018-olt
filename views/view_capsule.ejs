<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>One Last Time - <%= firstName %>'s Capsule </title>
    <link href = "/css/page_template.css" rel = "stylesheet" type = "text/css">
    <link href = "/css/view_capsule.css" rel = "stylesheet" type = "text/css">
    <link rel="icon" href="res/logoImageBlack.png">
</head>

<%- include("page_template_start");%>
        <div class = "preamble">
            <p><%= senderFirstName %> saved the following time capsule for you to view</p>
        </div>
        <div class = "note">
            <img src = "/res/corner.png" width = "3%">
            <p><%- note %></p>
        </div>

        <div class = "videoGallery">
            <div class = "prevVideo">
                <p>&#10094;</p>

            </div>

            <% video.forEach(function(video, i){ %>
                <div class = "video" >
                    <video controls width = "100%">
                        <source src= "<%= "/video/" + video._id %>" type="video/mp4" >
                    </video>
                </div>
            <% }) %>
                <div class = "nextVideo">
                    <p>&#10095;</p>
                </div>
        </div>

        <div class = "photoGallery">
            <div class = "prevPhoto">
                <p>&#10094;</p>

            </div>
            <% img.forEach(function(photo, i){ %>
                <div class = "photo <%= i %>">
                    <img src="<%= "/capsule/" + photo._id %>" width = 100% />
                </div>
            <% }) %>

            <div class = "nextPhoto">
                <p>&#10095;</p>
            </div>
        </div>

<script src = "/js/view_capsule.js"></script>
<%- include("page_template_end");%>